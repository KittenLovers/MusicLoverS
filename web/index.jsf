                    <f:facet name="header">id</f:facet>
                        ${product.id}
                </h:column>
                <h:column>                
                    <f:facet name="header">name</f:facet>
                    <h:form>
                        <h:commandLink value="${product.name}" action="${productController.getProduct(product)}" />
                    </h:form>
